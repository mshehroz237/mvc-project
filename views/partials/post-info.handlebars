<article class="post mr-5">
  <div class="title">
    <a href="/posts/{{id}}">{{title}}</a>
  </div>
  <div class="meta mb-5">
    Created by {{user.username}} on {{format_date createdAt}} at {{format_time createdAt}}
    |
    <a href="/posts/{{id}}" style="color:tomato">{{comment.length}} {{format_plural "comment" comment.length}}</a>
  </div>
</article>